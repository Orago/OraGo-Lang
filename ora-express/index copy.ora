IMPORT express FROM 'express.npm';

LET app = express();
LET runs = 0;

FUNCTION onSlash (req, res){
	LET GLOBAL runs = runs + 1;
	
	RETURN res.send ('Hello World ' + runs);
}

app.get('/', onSlash);

app.listen (3000);

PRINT "Server Started";

SLEEP 1000;

PRINT "slept 1";

SLEEP 1000;

PRINT "slept 2";