
let body = qs('body')
	.styles({
		transition: '5s'
	});

print 'test' randomize;

func panel (){
	let el = n.div
		.styles({
			padding: '5px',
			borderRadius: '5px',
			margin: '5px',
			background: 'white',
			transition: '5s'
		});

	func color (){
		let c = [Math.random(), Math.random(), Math.random()] * 255;

		let background = 'rgb('+ c.0 + ',' + c.1 + ',' + c.2 + ')';

		el.styles({ background });
	}

	interval(color, 2000);
	
	return el;
}


body(
	panel()(
		n.h1('Hello Ora')
			.attr({ 'data-value': 'Hello Ora' })
			.wrapper(func (node) {
			node.styles({
				textAlign: 'center'
			})
			.on('mouseover', func (){
				if (window has 'interval'){
					window.interval.kill();
				};

				let window.interval = interval(func (){

					let text = node.node.dataset.value as ARRAY;
					let rand = text randomize;
					node.text(rand as STRING);


					if (iteration > node.node.dataset.value.length){
						window.interval.kill();
					};
				}, 30);

				timeout(func (){
					window.interval.kill();
					node.text(node.node.dataset.value);
				}, 500);

			})
		})
	),
	panel(),

);

func run (){
	let c = [Math.random(), Math.random(), Math.random()] * 255;

	let background = 'rgb('+ c.0 + ',' + c.1 + ',' + c.2 + ')';

	body.styles({
		background
	});
}

run();

interval(run, 3000);
