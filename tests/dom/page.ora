func panel (){
	let el = n.div;

	el.styles({
		padding: '5px',
		borderRadius: '5px',
		margin: '5px'
	});

	func color (){
		let c = [Math.random(), Math.random(), Math.random()] * 255;

		let background = 'rgb('+ c.0 + ',' + c.1 + ',' + c.2 + ')';

		el.styles({
			background
		});
	}

	interval(color, 200);

	
	return el.node;
}

func run (){
	let c = [Math.random(), Math.random(), Math.random()] * 255;

	let background = 'rgb('+ c.0 + ',' + c.1 + ',' + c.2 + ')';

	body.styles({
		background
	});
}

